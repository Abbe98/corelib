<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>eu.europeana</groupId>
	<artifactId>corelib</artifactId>
	<packaging>pom</packaging>
	<version>${version.europeanaCorelib}</version>
	<name>corelib</name>
	<url>http://www.europeanalabs.eu</url>
	<organization>
		<url>http://www.europeanalabs.eu</url>
		<name>Europeana Foundation</name>
	</organization>
	<modules>
		<module>corelib-db</module>
		<module>corelib-definitions</module>
		<module>corelib-solr</module>
		<module>corelib-utils</module>
		<module>corelib-web</module>
	</modules>
	<repositories>
        <repository>
            <id>releases</id>
            <url>http://europeanalabs.eu/artifactory/repo</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>snapshots</id>
            <url>http://europeanalabs.eu/artifactory/repo</url>
            <releases>
                <enabled>false</enabled>
            </releases>
        </repository>
        <repository>
            <id>repo1</id>
            <url>http://repo1.maven.org/maven2</url>
        </repository>
        <repository>
            <id>ibiblio</id>
            <url>http://mirrors.ibiblio.org/pub/mirrors/maven2</url>
            <snapshots><enabled>false</enabled></snapshots>
        </repository>
        <repository>
            <id>annocultor.eu</id>
            <name>AnnoCultor Releases</name>
            <url>http://annocultor.eu/repository/maven2/</url>
        </repository>
	</repositories>
	<properties>
		<version.europeanaCorelib>2.0-SNAPSHOT</version.europeanaCorelib>
		<version.jdk>1.6</version.jdk>
		<version.junit>4.10</version.junit>

		<version.apacheSolr>3.5.0</version.apacheSolr>
		<version.apacheVelocity>1.7</version.apacheVelocity>
		<version.springCore>3.1.0.RELEASE</version.springCore>
		<version.commonsLang>2.6</version.commonsLang>
		<version.hibernateCore>3.6.8.Final</version.hibernateCore>

		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
	</properties>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<!-- best lock down version of the plugin too -->
					<configuration>
						<source>${version.jdk}</source>
						<target>${version.jdk}</target>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${version.junit}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>
